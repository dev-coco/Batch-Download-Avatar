{
  "manifest_version": 3,
  "name": "批量获取头像",
  "description": "生成现实生活中不存在的人物头像。",
  "author": "dev-coco",
  "version": "1.0.2",
  "action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "host_permissions": ["*://*/*"],
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}